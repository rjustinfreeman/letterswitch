---
import { Rss } from "lucide-react"
import { ThemeToggle } from "~/components/react/theme-toggle"

const siteTitle = "Letterswitch Publishing"
---

<header class="flex h-24 w-full items-center justify-between">
  {/* Left: Logo and Site Title */}
  <a href="/" aria-label={`${siteTitle} Blog`}>
    <div class="flex items-center space-x-4">
      <img
        src="/images/logo.png"
        alt="Letterswitch logo"
        class="h-10 w-10 rounded-sm"
      />
      <div
        class="font-raleway font-regular text-2xl"
        style="font-family: 'Raleway', sans-serif !important;"
      >
        the letterswitch blog
      </div>
    </div>
  </a>

  {/* Right: RSS + Theme Toggle */}
  <div class="flex items-center gap-6">
    <a href="/rss.xml" target="_blank" aria-label="RSS Feed" title="RSS Feed">
      <Rss />
    </a>
    <ThemeToggle client:load />
  </div>
</header>
